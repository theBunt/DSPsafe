

@{
    ViewBag.Title = "Home Page";
}


@*<h1>Health &amp; Safety</h1>
    <p class="lead">Welcome to DSP Health &amp; Safety page.</p>*@
<!--begin bg-carousel-->
<div id="bg-fade-carousel" class="carousel slide carousel-fade" data-ride="carousel">
    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <div class="slide1"></div>
        </div>
        <div class="item">
            <div class="slide2"></div>
        </div>
        <div class="item">
            <div class="slide3"></div>
        </div>
    </div><!-- .carousel-inner -->
    <div class="container carousel-overlay text-center">
        <h1>Health &amp; Safety</h1>
    </div>
</div><!-- .carousel -->
<!--end bg-carousel-->



<div class="row">
    <div class="col-md-4">
        <h2>Report an incident</h2>
        <p>Your safety in the workplace is our priority. In order to mantain the highest standards we need to be notified of any incidents which may require attention</p>
        <p>@Html.ActionLink("Report an Incident", "Create", "Incidents", null, new { @class = "btn btn-primary", @style = "color:white" })</p>
    </div>
    <div class="col-md-4">
        <h2>Find your Safety Officer</h2>
        <p>Your building has assigned employees to specific roles for your safety. To get in contact with your designated safety representatives visit here </p>
        <p>
            @*<a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301866"> &raquo;</a>*@
            @if ((User.IsInRole("Manager")) || (User.IsInRole("Staff")))
            {
                @Html.ActionLink("Find my rep", "Index", "Staff", null, new { @class = "btn btn-primary", @style = "color:white" })
            }
            else
            {
                <button class = "btn btn-secondary-outline" data-toggle="popover" data-trigger="hover" data-content="You must be logged in to report an incident">Find my rep</button>
            }
        </p>
    </div>
    <div class="col-md-4">

        <h2>View Reports</h2>
        <p>View details of reported incidents.</p>
        <p>@Html.ActionLink("View Reports", "Index", "Incidents", null, new { @class = "btn btn-primary", @style = "color:white" })</p>
    </div>
</div>

<script>
$(document).ready(function(){
    $('[data-toggle="popover"]').popover();
});
</script>